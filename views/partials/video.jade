- var id = video.id["$t"].split(":").pop();

li
	article.video
		header
			h2.title #{video.title["$t"]}
		section
			figure
				iframe(width="100%", height="300", src="http://www.youtube.com/embed/#{id}?html5=1", frameborder="0", allowfullscreen)
				figcaption.description #{video.media$group.media$description["$t"]}

			p.author
				strong #{video.author[0].name["$t"]}
				|Â uploaded
		footer.details
			ul.ch-stats
				- if (video["yt$statistics"])
					li.ch-icon-eye-open
						| #{video["yt$statistics"].viewCount}
						span views&nbsp;&nbsp;
				- if (video["gd$comments"])
					//li.ch-icon-comment
						| #{video["gd$comments"]["gd$feedLink"].countHint}
						span comments&nbsp;&nbsp;
				- if (video["yt$rating"])
					li.ch-icon-thumbs-up
						| #{video["yt$rating"].numLikes}
						span likes&nbsp;&nbsp;
		a(href="http://pinterest.com/pin/create/button/?url=#{video.link[0].href}&media=#{video["media$group"]["media$thumbnail"][0].url}&description=#{video.title["$t"]}", class="ch-btn-skin ch-btn-tiny ch-icon-pushpin repin", count-layout="none") Pin it!